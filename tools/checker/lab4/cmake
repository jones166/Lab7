IF(RUN_PROGRAM_MILESTONE_1_SIZE6)
    ADD_DEFINITIONS(-DRUN_PROGRAM=1)
    ADD_DEFINITIONS(-DCLOCKDISPLAY_TEXT_SIZE=6)
ELSEIF(RUN_PROGRAM_MILESTONE_1_SIZE5)
    ADD_DEFINITIONS(-DRUN_PROGRAM=1)
    ADD_DEFINITIONS(-DCLOCKDISPLAY_TEXT_SIZE=5)
ELSEIF(RUN_PROGRAM_MILESTONE_1_SIZE4)
    ADD_DEFINITIONS(-DRUN_PROGRAM=1)
    ADD_DEFINITIONS(-DCLOCKDISPLAY_TEXT_SIZE=4)
ELSEIF(RUN_PROGRAM_MILESTONE_1_SIZE3)
    ADD_DEFINITIONS(-DRUN_PROGRAM=1)
    ADD_DEFINITIONS(-DCLOCKDISPLAY_TEXT_SIZE=3)
ELSEIF(RUN_PROGRAM_MILESTONE_2)
    ADD_DEFINITIONS(-DRUN_PROGRAM=2)
ENDIF()

add_executable(lab4.elf main.c clockControl.c clockDisplay.c)
target_link_libraries(lab4.elf ${330_LIBS} intervalTimer)
set_target_properties(lab4.elf PROPERTIES LINKER_LANGUAGE CXX)